@import "../../common/css/minxs.styl"
html,body
  height 100%
  width 100%
  background-color #F4F4F4
.wrapper
  .wrapper-main
    .header
      width 100%
      .header-main
        height rem(88)
        background-color #ffffff
        padding 0 .4rem
        .logo
          float left
          font-size .48rem
          margin-top .35rem
        .text
          float right
          margin-top .4rem
          margin-right .4rem
          color #B4282D
          font-size .4rem
      .tab
        background #eee
        .service
          height rem(70)
          background #eee
          display flex
          justify-content space-around
          flex-flow nowrap
          align-items center
          .item
            display flex
            align-items center
            flex-flow nowrap
            height rem(36)
            i
              color rgba(94, 94, 94, 0.36)
            span
              font-size .32rem
              color #666
      .contentImg
        position relative
        top rem(300)
        .img
          width rem(248)
          height rem(248)
          margin-left rem(250)
          img
            width 100%
            height 100%
        .text
          text-align center
          span
            color #999999
            margin 0 0 50px
            font-size 16px
          .loginBtn
            width rem(480)
            height rem(92)
            background-color #b4282d
            font-size .4rem
            color #ffffff
            border-radius .04rem
            line-height rem(92)
            margin  auto
            margin-top rem(44)
