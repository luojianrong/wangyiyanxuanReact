rem(p)
  $rem=750/10
  return p/$rem rem

//一物理像素边框
border-1px($color)
  position relative
  &:after
    content ""
    display block
    width 100%
    height 1px
    position absolute
    bottom 0
    left 0
    background-color $color!important
    @media screen and (-webkit-device-pixel-ratio2)
      transform scaleY(.5)
    @media screen and (-webkit-device-pixel-ratio3)
      transform scaleY(.33333333333333333)

